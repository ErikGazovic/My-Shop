    function changeMargin(x, element) {
        if (x.matches) {
            element.firstElementChild.style.marginLeft = "25px";
        } else {
            element.firstElementChild.style.marginLeft = "40px";
        }
    }

    function removeArrows(x, element) {
        if (x.matches) {
            return true;
        }  
    }

