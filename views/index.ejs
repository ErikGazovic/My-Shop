    });





    for (var i = 0; i < genderOptions.length; i++) {

        genderOptions[i].addEventListener("mouseover", function () {

            changeMargin(xMenu800, this);
            this.style.backgroundColor = "lightgrey";
            if (this.lastElementChild.classList.contains('hide-arrow')) {
                this.lastElementChild.classList.remove('hide-arrow');
            }
            this.lastElementChild.classList.add('show-arrow');
            
        })

        genderOptions[i].addEventListener("mouseout", function () {
            
            if (this.lastElementChild.classList.contains('open-arrow')) {
                
            } else {
