    <script>

        if (document.querySelector(".code-form")) {
                const codeInputs = document.querySelectorAll(".code-form .form-div input");
                
                for (let element of codeInputs) {
                        element.addEventListener("keyup", ()=>{
                            if( element.value.length === element.maxLength && parseInt(element.id) < codeInputs.length) {
                                document.getElementById(parseInt(element.id) +1).focus();
                            }
                        })
                }


        }

        if (document.querySelector("#email") || document.querySelector('#password')) {
            const emailInput = document.querySelector("#email");
            const emailIcon = document.querySelector(".form-div .email-icon");
                const passwordInput = document.querySelector('#password');
        const repeatPasswordInput = document.querySelector('#rep-password');
        const eyeImg = document.querySelector('.norep-icon');
        const repEyeImg = document.querySelector('.rep-icon');
        const passwordIcon = document.querySelector(".pass-icon");
        const repPasswordIcon = document.querySelector(".rep-pass-icon");


        function seePassword() {
            if (event.target.classList[1] === "norep-icon")  {

                if (passwordInput.getAttribute('type') === "password") {
                    passwordInput.setAttribute('type', 'text');
                    eyeImg.setAttribute('src', '../images/not-visible-icon.svg');
                } else {
                    passwordInput.setAttribute('type', 'password');
                    eyeImg.setAttribute('src', '../images/visible-icon.svg');
                }
                
            } else if (event.target.classList[1] === "rep-icon") {
                if (repeatPasswordInput.getAttribute('type') === "password") {
                    repeatPasswordInput.setAttribute('type', 'text');
                    repEyeImg.setAttribute('src', '../images/not-visible-icon.svg');
                } else {
                    repeatPasswordInput.setAttribute('type', 'password');
                    repEyeImg.setAttribute('src', '../images/visible-icon.svg');
                }
            }
        }

        function inputClick() {
            var source = event.target;
             if (source.name === "password") {
                passwordInput.style.padding = "0px 15px";
                passwordIcon.style.display = "none";
                repeatPasswordInput.style.padding = "0px 45px";
                repPasswordIcon.style.display = "block";
                emailInput.style.padding = "0px 45px";
                emailIcon.style.display = "block";
            } else if (source.name === "rep-password") {
                repeatPasswordInput.style.padding = "0px 15px";
                repPasswordIcon.style.display = "none";
                passwordInput.style.padding = "0px 45px";
                passwordIcon.style.display = "block";
                emailInput.style.padding = "0px 45px";
                emailIcon.style.display = "block";
            } else if (source.name === "email") {

                emailInput.style.padding = "0px 15px";
                emailIcon.style.display = "none";
                passwordInput.style.padding = "0px 45px";
                passwordIcon.style.display = "block";
                repeatPasswordInput.style.padding = "0px 45px";
                repPasswordIcon.style.display = "block";
            } 
            else {
            if (document.querySelector('#password')) {
                passwordInput.style.padding = "0px 45px";
                passwordIcon.style.display = "block";
                repeatPasswordInput.style.padding = "0px 45px";
                repPasswordIcon.style.display = "block";
            } else if (document.querySelector("#email")) {
                const emailInput = document.querySelector("#email");
                const emailIcon = document.querySelector(".form-div .email-icon");
                emailInput.style.padding = "0px 45px";
                emailIcon.style.display = "block";
            }
            

            }

            
        }

            document.querySelector("#password").setAttribute("value", "");
    const alphabet = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ'.split('');
    const numbers  = "1234567890".split("");
    const symbols = "+-()&#%$".split("");
    document.querySelector(".generate-div").addEventListener("click", function () {
        
        let randomPass = "";
    
        for (var i = 0; i < 6; i++) {
            const randomNumLetters = Math.floor(Math.random() * alphabet.length);
            randomPass = randomPass.concat(alphabet[randomNumLetters]);
        }
    
        for (var i = 0; i < 4; i++) {
            const randomNumNum = Math.floor(Math.random() * numbers.length);
            randomPass = randomPass.concat(numbers[randomNumNum]);
        }
    
        for (var i = 0; i < 2; i++) {
            const randomNumSym = Math.floor(Math.random() * symbols.length);
            randomPass = randomPass.concat(symbols[randomNumSym]);
        }
    
        let randomPassFinal = randomPass.split("");
    
        for (var i = randomPassFinal.length - 1; i > 0; i--) {
            const lastRandom = Math.floor(Math.random() * randomPassFinal.length);
            let temp = randomPassFinal[i];
            randomPassFinal[i] = randomPassFinal[lastRandom];
            randomPassFinal[lastRandom] = temp;
        }
    
        let finalPassword = "";
    
        for (var i = 0; i < randomPassFinal.length; i++) {
            finalPassword = finalPassword.concat(randomPassFinal[i]);
        }
        document.querySelector("#password").setAttribute("value", finalPassword);
        document.querySelector("#password").value = finalPassword;
        document.querySelector("#rep-password").setAttribute("value", finalPassword);
        document.querySelector("#rep-password").value = finalPassword;
    })

        }

        


        const burgerMenu = document.querySelector(".burger-menu");
    const xButton = document.querySelector(".close-x");
    const mobileMenu = document.querySelector(".mobile-scale-menu");

    burgerMenu.addEventListener("click", function () {
        this.style.display = "none";
        mobileMenu.style.width = "170px";
        mobileMenu.style.borderLeft = "2px solid gray";
    })

    xButton.addEventListener("click", function () {
        mobileMenu.style.width = "0px";
        mobileMenu.style.borderLeft = "none";
        burgerMenu.style.display = "block";
    });


    function myFunction(x) {
            if (x.matches) {
                burgerMenu.style.display = "block";
            } else {
                burgerMenu.style.display = "none";
                mobileMenu.style.width = "0px";
                mobileMenu.style.borderLeft = "none";
            }
        }


        var x = window.matchMedia("(max-width: 500px)");

        x.addEventListener("change", function() {
            myFunction(x);
        });
        
    </script>
        