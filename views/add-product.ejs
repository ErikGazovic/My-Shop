</head>
<body>
    <header class="main-header main-font">
        <% if (locals.username) { %>
            <h3 class="home-logo"><a href="/home-page/<%= username %>"><i>DAY-HYPE</i></a></h3>
                <ul role="list" class="header-list">
                <li><a href="/logout">Log Out</a></li>
                    <li><a href="/about-us/<%= username %>">About Us</a></li>
                    <li><a href="#">Contact</a></li>
                <li><a href="/<%= username %>/my-cart"><%- include("../public/images/shopping-cart-icon.svg") %></a></li>
                <li><a href="#">My Account</a></li>
            </ul>
            <%- include("../public/images/burger-menu.svg")%>

            <div class="mobile-scale-menu">
                <%- include("../public/images/close-x.svg")%>
                <ul role="list" class="header-list-mobile">
                    <li><a href="/logout">Log Out</a></li>
                    <li><a href="/about-us/<%= username %>">About Us</a></li>
                    <li><a href="#">Contact</a></li>
                    <li><a href="/<%= username %>/my-cart">My Cart</a></li>
                    <li><a href="#">My Account</a></li>
                </ul>
            </div>            
        <% } else { %>
            <h3 class="home-logo"><a href="/home-page"><i>DAY-HYPE</i></a></h3>
            <ul role="list" class="header-list">
                <li><a href="/login">Log In</a></li>
                <li><a href="/register">Sign Up</a></li>
                    <li><a  href="/about-us">About Us</a></li>
                    <li><a href="/contact">Contact</a></li>
            </ul>
            <%- include("../public/images/burger-menu.svg")%>

            <div class="mobile-scale-menu">
                <%- include("../public/images/close-x.svg")%>
                <ul role="list" class="header-list-mobile">
                    <li><a href="/login">Log In</a></li>
                    <li><a href="/register">Sign Up</a></li>
                    <li><a href="/about-us">About Us</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </div>
        <% } %>
        
    </header>

    
    <main class="add-product-main">
        <form action="/add-product" method="POST" class="add-product-form">
            <% if (locals.successMsg) { %>
                <p class="add-msg add-success "><%= successMsg %></p>
            <% } else if (locals.failMsg) {%>
                <p class="add-msg add-failed"><%= failMsg %></p>
            <% } %>
            <div>
                <h3>Add new product</h3>
                <label for="img">Select image:</label>
                <p style="color: red; width: 350px; font-size: 0.8rem;">IMPORTANT! Choose image from folder on your Desktop! <br>
                Cut the portrait images to 5/7 ratio and landscape images to 5/4 ratio</p>
                <div  onclick="document.getElementById('getFile').click()" class="image-input" >
                    <%- include("../public/images/tshirt-icon.svg") %>
                    <img src="#" alt="previewImage" id="previewImage">
                    <input type="file" id="img" name="img" accept="image/*" required>
                    <%- include("../public/images/close-x.svg") %>
                </div>
                
                <label for="productName">Product Name:</label>
                <input type="text" id="productName" name="productName">                
            </div>
            

            <div class="second-column">
                <label for="targetGroup">Product Target Group:</label>
                    <div class="new-prd-dropdown"><b></b> <span><%- include("../public/images/arrow-menu.svg") %></span></div><ul role="list" class="new-prd-dropdown-menu">
                        <li>Women</li>
                        <li>Men</li>
                        <li>Girls</li>
                        <li>Boys</li>
                        <li>Unisex</li>
                    </ul><input type="hidden" id="targetGroup" name="targetGroup" value="" required>
                <label for="productCategory">Product Category:</label>
                    <div class="new-prd-dropdown category-dropdown"><b></b> <span><%- include("../public/images/arrow-menu.svg") %></span></div><ul role="list" class="new-prd-dropdown-menu">
                        <li>Clothing</li>
                        <li>Shoes</li>
                        <li>Accessories</li>
                    </ul><input type="hidden" id="productCategory" name="productCategory" value="" required> 
                <label for="productType">Product Type:</label>
                    <div class="new-prd-dropdown"><b></b> <span><%- include("../public/images/arrow-menu.svg") %></span></div><ul role="list" class="new-prd-dropdown-menu">
                        <% for (let clothingPiece of allClothes) {%>
                            <li><%= clothingPiece %></li>
                        <% } %>
                    </ul><input type="hidden" id="productType" name="productType" value="" required>
            </div>

            <div class="third-column">
                <label for="brandLogo">Brand Logo (if new brand):</label>
                <div  onclick="document.getElementById('getFile').click()" class="logo-input" >
                    <p>LOGO</p>
                    <img src="#" alt="previewLogo" id="previewLogo">
                    <input type="file" accept="image/*" id="brandLogo" name="brandLogo">
                    <%- include("../public/images/close-x.svg") %>
                </div>
                
                <label for="brandName">Brand Name:</label>
                <input type="text" id="brandName" name="brandName" required>
                <label for="setPrice">Set Price:</label>
                <div>
                    <input type="text" id="setPrice" name="setPrice" required><p>$</p>   
                </div>
                
                <label for="setColor">Set Color:</label>
                <input type="text" id="setColor" name="setColor" required>
            </div>

            <div>
                <h5>Clothing Sizing Amount</h5>
                <div class="clothing-sizes">
                    <div>
                        <label for="xxs">XXS:</label>
                        <input type="text" name="xxsAmount" id="xxs" required>
                    </div>
                    <div>
                        <label for="xs">XS:</label>
                        <input type="text" name="xsAmount" id="xs" required>
                    </div>
                    <div>
                        <label for="s">S:</label>
                        <input type="text" name="sAmount" id="s" required>
                    </div>
                    <div>
                        <label for="m">M:</label>
                        <input type="text" name="mAmount" id="m" required>
                    </div>
                    <div>
                        <label for="l">L:</label>
                        <input type="text" name="lAmount" id="l" required>
                    </div>
                    <div>
                        <label for="xl">XL:</label>
                        <input type="text" name="xlAmount" id="xl" required>
                    </div>
                    <div>
                        <label for="xxl">XXL:</label>
                        <input type="text" name="xxlAmount" id="xxl" required>
                    </div>
                </div>
                <h5>Shoe Sizing Amount</h5>
                <div class="shoe-sizes">
                    
                    <% for (var i = 27; i <= 47; i++) { %>
                    <div>
                        <label for="size<%= i %>"><%= i %></label>
                        <input type="text" name="size<%= i %>Amount" id="size<%= i %>" required>
                    </div>
                <% } %>
                </div>
                <input type="hidden" name="username" value="<%= username %>">
                <input type="submit" value="Add Product To Database" class="add-product-btn">
            </div>

        </form>

    </main>
        <footer class="normal-footer">
            <h3 class="home-logo-footer"><i>DAY-HYPE</i></h3>
            <% if (locals.username) {%>
            <ul role="list" class="footer-ul list1">
                <li><a href="/home-page/<%= username %>">Log In</a></li>
                <li><a href="/register/<%= username %>">Create Account</a></li>
                    <li><a href="/about-us/<%= username %>">About Us</a></li>
                    <li><a href="#">Contact</a></li>
                <li><a href="">Services</a></li>
            </ul>
            <% } else { %>
            <ul role="list" class="footer-ul list1">
                <li><a href="/login">Log In</a></li>
                <li><a href="/register">Create Account</a></li>
                    <li><a href="/about-us">About Us</a></li>
                    <li><a href="#">Contact</a></li>
                <li><a href="">Services</a></li>
            </ul>
            <% } %>
            <ul role="list" class="footer-ul list2">
                <li><a href="">Men</a></li>
                <li><a href="">Women</a></li>
                <li><a href="">Girls</a></li>
                <li><a href="">Boys</a></li>
                <li><a href="">Unisex</a></li>
                <li><a href="">New Collection</a></li>
            </ul>
            <div class="last-div-footer">
                <ul role="list" data-type="media-icons" class="social-media">
                    <li><a href="#"><img class="media-icon" src="../images/facebook.svg"></a></li>
                    <li><a href="#"><img class="media-icon" src="../images/instagram.svg"></a></li>
                    <li><a href="#"><img class="media-icon" src="../images/tiktok.svg"></a></li>
                    <li><a href="#"><img class="media-icon" src="../images/twitch.svg"></a></li>
                    <li><a href="#"><img class="media-icon" src="../images/twitter.svg"></a></li>
                </ul>
                <p>Copyright © by Erik Gažovič, <%= year %></p>
            </div>
        </footer>
</body>
<script>

    const imageInput = document.querySelector(".image-input input");
    const imageInputSvg = document.querySelector(".image-input .shirt-icon");
    const imageClose = document.querySelector(".image-input .close-x");
    imageInput.addEventListener('change', async function(event) {
            imageClose.style.display = "block";
            const preview = await previewImage(this);
            imageInputSvg.style.display = "none";
            document.getElementById('previewImage').style.display = "block";
            document.getElementById('previewImage').style.zIndex = "1";
            document.getElementById('previewImage').setAttribute('src', preview);
                
            
            imageInput.style.zIndex = '-1';
                
    });

    imageClose.addEventListener("click", function () {
        document.getElementById('previewImage').style.display = "none";
        imageInputSvg.style.display = "block";
        imageInput.style.zIndex = '1';
        imageInput.value = "";
        this.style.display = "none";
    });


    const logoInput = document.querySelector(".logo-input input");
    const logoClose = document.querySelector(".logo-input .close-x");
    logoInput.addEventListener('change', async function() {
        logoClose.style.display = "block";
            const preview = await previewImage(this);
            document.getElementById('previewLogo').style.display = "block";
            document.getElementById('previewLogo').style.zIndex = "1";
            document.getElementById('previewLogo').setAttribute('src', preview);
                
            
            logoInput.style.zIndex = '-1';
            document.querySelector(".logo-input p").style.display = "none";
                
    });

    function previewImage(input) {
                return new Promise((resolve, reject) => {
                    if (input.files && input.files[0]) {
                        const reader = new FileReader();

                        reader.onload = function(e) {
                            resolve(e.target.result);
                        }
                        reader.readAsDataURL(input.files[0]);
                    } else {
                        reject('No file selected');
                    }
                });
            }

    logoClose.addEventListener("click", function () {
        document.getElementById('previewLogo').style.display = "none";
        document.querySelector(".logo-input p").style.display = "block";
        logoInput.style.zIndex = '1';
        logoInput.value = "";
        this.style.display = "none";
    });

    const allDropdowns = document.querySelectorAll(".new-prd-dropdown");
    const dropdownLis = document.querySelectorAll(".new-prd-dropdown-menu li");

    for (let dropdwon of allDropdowns) {
        dropdwon.addEventListener("click", function () {
            dropdwon.nextSibling.classList.toggle("new-prd-dropdown-open");
        })
    }

    const allShoeInputs = document.querySelectorAll(".shoe-sizes input");
    const allClothingInputs = document.querySelectorAll(".clothing-sizes input");

    for (let dropdwonli of dropdownLis) {
        dropdwonli.addEventListener("click", function () {
            let string = this.innerText;
            this.parentElement.previousSibling.innerHTML = `<b>${string}</b> <%- include("../public/images/arrow-menu.svg") %>`;
            this.parentElement.nextSibling.value = `${string}`;
            this.parentElement.classList.remove("new-prd-dropdown-open");
            if (string === "Clothing" || string === "Accessories") {
                for (let shoeInput of allShoeInputs) {
                    shoeInput.disabled = true;
                }

                for (let clothingInput of allClothingInputs) {
                    clothingInput.disabled = false;

                }
            } else if (string === "Shoes") {
                for (let clothingInput of allClothingInputs) {
                    clothingInput.disabled = true;
                }

                for (let shoeInput of allShoeInputs) {
                    shoeInput.disabled = false;
                }
            }
            
        })
    }




    const burgerMenu = document.querySelector(".burger-menu");
    const xButton = document.querySelector(".close-x");
    const mobileMenu = document.querySelector(".mobile-scale-menu");

    burgerMenu.addEventListener("click", function () {
        this.style.display = "none";
        mobileMenu.style.width = "170px";
        mobileMenu.style.borderLeft = "2px solid gray";
    })

    xButton.addEventListener("click", function () {
        mobileMenu.style.width = "0px";
        mobileMenu.style.borderLeft = "none";
        burgerMenu.style.display = "block";
    });


    function myFunction(x) {
            if (x.matches) {
                burgerMenu.style.display = "block";
            } else {
                burgerMenu.style.display = "none";
                mobileMenu.style.width = "0px";
                mobileMenu.style.borderLeft = "none";
            }
        }


        var x = window.matchMedia("(max-width: 500px)");

        x.addEventListener("change", function() {
            myFunction(x);
        });
        if (document.querySelector(".add-msg") !== undefined) {
            setTimeout(() => {
                document.querySelector(".add-msg").style.opacity = "0";
                document.querySelector(".add-msg").style.cursor = "default";
            }, 4000);
        }

</script>
</html>
